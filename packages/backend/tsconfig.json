{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2023"],
    "checkJs": true,
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "node_modules/express-request-id/types.d.ts",
      "./types"
    ]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "src/**/*.js", "index.ts"]
}
